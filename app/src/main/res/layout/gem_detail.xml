<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/t_gem_name"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholderText"
        android:layout_marginTop="71dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/t_gem_color"
        android:layout_alignStart="@+id/t_gem_color" />

    <TextView
        android:id="@+id/t_gem_color"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholderText"
        android:layout_below="@+id/t_gem_name"
        android:layout_alignLeft="@+id/t_gem_weight"
        android:layout_alignStart="@+id/t_gem_weight" />

    <TextView
        android:id="@+id/t_gem_weight"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholderText"
        android:layout_below="@+id/t_gem_color"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
