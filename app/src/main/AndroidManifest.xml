<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="boycese.cs.simmons.edu.gemscl">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_launcher_gemscl"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddGem"
            android:label="@string/title_activity_add_gem"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name=".List"
            android:label="@string/title_activity_list"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name=".ListGemDetail"
            android:label="@string/title_activity_list_gem_detail"
            android:parentActivityName=".List">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="boycese.cs.simmons.edu.gemscl.List" />
        </activity>
    </application>

</manifest>
